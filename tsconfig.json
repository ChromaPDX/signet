{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "esm",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    // "importHelpers": true,
    "lib": ["esnext", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    // "noUnusedLocals": true,
    // "strict": true,
    "target": "ES6"
  }
}
