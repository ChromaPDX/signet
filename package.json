{
  "name": "@chromapdx/signet",
  "version": "0.1.5",
  "description": "A specification for open provenance; a suite of tools for best practice.",
  "author": "Leif Shackelford <structuresound@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@zilliqa-js/crypto": "^0.9",
    "cbor": "^5.0",
    "js-sha3": "^0.8",
    "multicodec": "^1.0",
    "varint": "^5.0",
    "protobufjs": "^6.9",
    "typed-json-transform": "^0.24"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "NODE_ENV=test mocha --require ts-node/register \"test/**/*.ts\" --bail",
    "cover": "NODE_ENV=test nyc --report-dir coverage npm t",
    "travis": "npm run build && npm run cover"
  },
  "devDependencies": {
    "@stablelib/hmac-drbg": "^1.0",
    "bip-schnorr": "^0.3",
    "@types/cbor": "^5.0",
    "@types/chai": "^4.2",
    "@types/ecurve": "^1.0",
    "@types/mocha": "^7",
    "@types/node": "^10",
    "@types/varint": "^5.0",
    "chai": "^4.2",
    "coveralls": "^3.0",
    "mocha": "^7.1",
    "nyc": "^15",
    "ts-node": "^8.8",
    "tslib": "^1.11",
    "typescript": "^3.8"
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "lcov"
    ],
    "all": true
  }
}
