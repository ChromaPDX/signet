{
  "name": "@chromapdx/signet",
  "version": "0.1.1",
  "description": "A specification for open provenance; a suite of tools for best practice.",
  "author": "Leif Shackelford <structuresound@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@stablelib/hmac-drbg": "^1.0.0",
    "@zilliqa-js/crypto": "^0.8.9",
    "bip-schnorr": "^0.3.0",
    "cbor": "^5.0.1",
    "js-sha3": "^0.8.0",
    "multicodec": "^1.0.0",
    "varint": "^5.0.0",
    "protobufjs": "^6.8.9"
  },
  "scripts": {
    "build": "tsc",
    "test": "NODE_ENV=test mocha --require ts-node/register \"test/**/*.ts\" --bail",
    "cover": "NODE_ENV=test nyc --report-dir coverage npm t",
    "travis": "npm run build && npm run cover"
  },
  "devDependencies": {
    "@types/cbor": "^5.0.0",
    "@types/chai": "^4.1.7",
    "@types/ecurve": "^1.0.0",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "@types/varint": "^5.0.0",
    "chai": "^4.2",
    "coveralls": "^3.0",
    "mocha": "^7",
    "nyc": "^15",
    "ts-node": "^8.6",
    "typescript": "3.7.5"
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "lcov"
    ],
    "all": true
  }
}
